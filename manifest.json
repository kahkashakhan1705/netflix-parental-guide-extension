{
  "manifest_version": 3,
  "name": "Netflix IMDb Parental Guide",
  "version": "1.0.0",
  "description": "Displays IMDb Parental Guide information directly on Netflix title pages using imdbapi.dev",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://imdbapi.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/title/*",
        "https://www.netflix.com/watch/*",
        "https://www.netflix.com/browse*"
      ],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
   
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
     
      "128": "icons/icon128.png"
    },
    "default_title": "Netflix IMDb Parental Guide"
  }
}